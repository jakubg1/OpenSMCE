{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "description": "The root object.",
    "properties": {
        "$schema": true,
        "keys": {
            "type": "object",
            "description": "A map from string keys to their translations.",
            "propertyNames": {
                "pattern": "^.*$"
            },
            "patternProperties": {
                "^.*$": {
                    "type": "string",
                    "description": "The string that will be displayed in-game."
                }
            }
        }
    },
    "required": [
        "keys"
    ],
    "additionalProperties": false
}