{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "description": "The root entry.",
    "properties": {
        "$schema": true,
        "name": {
            "type": "string",
            "description": "The map name."
        },
        "paths": {
            "type": "array",
            "description": "A list of paths which are available on this map.",
            "items": {
                "$ref": "_structures/Path.json",
                "description": "A single path."
            }
        },
        "objects": {
            "type": "array",
            "description": "A list of objects to be drawn on this map.",
            "items": {
                "type": "object",
                "description": "A single object.",
                "properties": {
                    "type": {
                        "enum": [
                            "sprite",
                            "particle"
                        ]
                    },
                    "layer": {
                        "type": "string",
                        "description": "The layer on which the object will be displayed."
                    },
                    "x": {
                        "type": "number",
                        "description": "The X position of this object."
                    },
                    "y": {
                        "type": "number",
                        "description": "The Y position of this object."
                    }
                },
                "allOf": [
                    {
                        "properties": {
                            "type": {
                                "description": "The object type."
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "sprite",
                                    "description": "A sprite."
                                }
                            },
                            "required": [
                                "type"
                            ]
                        },
                        "then": {
                            "properties": {
                                "type": true,
                                "sprite": {
                                    "$ref": "_structures/Sprite.json",
                                    "description": "Path to a Sprite to be displayed."
                                },
                                "layer": true,
                                "x": true,
                                "y": true
                            },
                            "required": [
                                "sprite"
                            ],
                            "additionalProperties": false
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "particle",
                                    "description": "A particle effect."
                                }
                            },
                            "required": [
                                "type"
                            ]
                        },
                        "then": {
                            "properties": {
                                "type": true,
                                "particle": {
                                    "$ref": "_structures/ParticleEffect.json",
                                    "description": "Path to a particle effect to be displayed."
                                },
                                "layer": true,
                                "x": true,
                                "y": true
                            },
                            "required": [
                                "particle"
                            ],
                            "additionalProperties": false
                        }
                    }
                ],
                "required": [
                    "type",
                    "layer",
                    "x",
                    "y"
                ]
            }
        }
    },
    "required": [
        "name",
        "paths",
        "objects"
    ],
    "additionalProperties": false
}