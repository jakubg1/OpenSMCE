{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "description": "The root object.",
    "properties": {
        "type": {
            "enum": [
                "image",
                "imageLove",
                "truetype",
                "bmfont"
            ]
        },
        "color": {
            "$ref": "_structures/Color.json",
            "description": "The color of this Font."
        }
    },
    "allOf": [
        {
            "properties": {
                "type": {
                    "description": "The font type."
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "image",
                        "description": "The font loads glyphs from an image file. All characters must be placed in a single row."
                    }
                },
                "required": [
                    "type"
                ]
            },
            "then": {
                "properties": {
                    "$schema": true,
                    "type": true,
                    "image": {
                        "$ref": "_structures/Image.json",
                        "description": "The path to an Image which contains the characters."
                    },
                    "characters": {
                        "type": "object",
                        "description": "Contains all characters this Font consists of. Key names are single characters.",
                        "propertyNames": {
                            "pattern": "^.$"
                        },
                        "patternProperties": {
                            "^.$": {
                                "type": "object",
                                "description": "A single character.",
                                "properties": {
                                    "x": {
                                        "type": "integer",
                                        "description": "The X position of the top left corner of the character box, in pixels.",
                                        "minimum": 0
                                    },
                                    "y": {
                                        "type": "integer",
                                        "description": "The Y position of the top left corner of the character box, in pixels. Defaults to 0.",
                                        "markdownDescription": "The Y position of the top left corner of the character box, in pixels. Defaults to `0`.",
                                        "minimum": 0
                                    },
                                    "width": {
                                        "type": "integer",
                                        "description": "The width of the character, in pixels.",
                                        "minimum": 0
                                    }
                                },
                                "required": [
                                    "x",
                                    "width"
                                ],
                                "additionalProperties": false
                            }
                        }
                    },
                    "height": {
                        "type": "integer",
                        "description": "The height of all characters, in pixels. If not specified, the image height will be used.",
                        "exclusiveMinimum": 0
                    },
                    "lineSpacing": {
                        "type": "number",
                        "description": "The padding between lines to be added in a multiline text, in pixels."
                    },
                    "color": true
                },
                "required": [
                    "image",
                    "characters"
                ],
                "additionalProperties": false
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "imageLove",
                        "description": "The font loads glyphs from an image file. The characters are separated with a different color of a line. All characters must be placed in a single row."
                    }
                },
                "required": [
                    "type"
                ]
            },
            "then": {
                "properties": {
                    "$schema": true,
                    "type": true,
                    "image": {
                        "$ref": "_structures/Image.json",
                        "description": "The path to an Image which contains the characters."
                    },
                    "characters": {
                        "type": "string",
                        "description": "A string of characters contained in this Font, in the same order as contained in the image."
                    },
                    "spacing": {
                        "type": "integer",
                        "description": "Spacing between characters, in pixels.",
                        "minimum": 0
                    },
                    "color": true
                },
                "required": [
                    "image",
                    "characters"
                ],
                "additionalProperties": false
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "truetype",
                        "description": "The font loads glyphs from a TTF file."
                    }
                },
                "required": [
                    "type"
                ]
            },
            "then": {
                "properties": {
                    "$schema": true,
                    "type": true,
                    "file": {
                        "$ref": "_structures/FontFile.json",
                        "description": "The path to a TTF font file which contains the characters."
                    },
                    "size": {
                        "type": "integer",
                        "description": "The size of the Font, in pixels.",
                        "exclusiveMinimum": 0
                    },
                    "color": true
                },
                "required": [
                    "file",
                    "size"
                ],
                "additionalProperties": false
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "bmfont",
                        "description": "The font loads a BMFont file and its related resources."
                    }
                },
                "required": [
                    "type"
                ]
            },
            "then": {
                "properties": {
                    "$schema": true,
                    "type": true,
                    "file": {
                        "type": "string",
                        "description": "The path to a valid BMFont .fnt file. Images related to the BMFont must be located alongside that file.",
                        "markdownDescription": "The path to a valid BMFont `.fnt` file. Images related to the BMFont must be located alongside that file."
                    },
                    "color": true
                },
                "required": [
                    "file"
                ],
                "additionalProperties": false
            }
        }
    ],
    "required": [
        "type"
    ]
}