{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "description": "The Node's child.",
    "properties": {
        "type": {
            "enum": [
                "include",
                "node"
            ]
        }
    },
    "allOf": [
        {
            "properties": {
                "type": {
                    "description": "A Node's child type."
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "include",
                        "description": "Include a Layout from another file."
                    }
                },
                "required": [
                    "type"
                ]
            },
            "then": {
                "properties": {
                    "$schema": true,
                    "type": true,
                    "layout": {
                        "type": "string",
                        "description": "Name of the Layout which should be included."
                    }
                },
                "required": [
                    "layout"
                ],
                "additionalProperties": false
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "node",
                        "description": "Specify a child Node in this file."
                    }
                },
                "required": [
                    "type"
                ]
            },
            "then": {
                "properties": {
                    "$schema": true,
                    "type": true,
                    "node": {
                        "$ref": "node.json",
                        "description": "Defines the child Node."
                    }
                },
                "required": [
                    "node"
                ],
                "additionalProperties": false
            }
        }
    ],
    "required": [
        "type"
    ]
}