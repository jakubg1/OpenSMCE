{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "description": "The root object.",
    "properties": {
        "$schema": true,
        "sprites": {
            "type": "array",
            "description": "The list of Sprites which should be included in this Sprite Atlas.",
            "items": {
                "$ref": "_structures/Sprite.json",
                "description": "A single sprite."
            }
        }
    },
    "required": [
        "sprites"
    ],
    "additionalProperties": false
}